namespace LmsPoc.Web.Application.Interfaces
{
    public class StorageItem
    {
        public string Key { get; set; } = default!;
        public string Url { get; set; } = default!;
        public string ContentType { get; set; } = default!;
    }

    public interface IStorageService
    {
        // ... senin var olan metodların (Upload, GetFileAsync vs) ...

        /// <summary>
        /// Verilen prefix altındaki dosyaları listeler.
        /// Örn: "lms-poc-content/scorm/"
        /// </summary>
        Task<IReadOnlyList<StorageItem>> ListAsync(string prefix);
    }
}
