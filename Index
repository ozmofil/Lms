@section Scripts {
    <!-- Tab scriptleri -->
    <script src="~/js/LmsMp4.js"></script>
    <script src="~/js/LmsPdf.js"></script>
    <script src="~/js/LmsScorm.js"></script>
    <script src="~/js/LmsXapi.js"></script>
    <script src="~/js/LmsContentUpload.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // MP4 tabı
            if (window.LmsMp4) {
                LmsMp4.init({
                    apiBaseUrl: "/api/cmi5",
                    contentType: "Mp4"
                });
            }

            // PDF tabı
            if (window.LmsPdf) {
                LmsPdf.init({
                    apiBaseUrl: "/api/cmi5",
                    contentType: "Pdf"
                });
            }

            // SCORM tabı
            if (window.LmsScorm) {
                // LmsScorm.js içinde hem window.API’yi expose ediyor
                // hem de SCORM launch + log mekanizmasını kuruyor
                LmsScorm.init();
            }

            // xAPI tabı
            if (window.LmsXapi) {
                LmsXapi.init({
                    apiBaseUrl: "/api/cmi5",
                    contentType: "Xapi"
                });
            }

            // İçerik Yönetimi (S3 upload) tabı
            if (window.LmsUpload) {
                LmsUpload.init();
            }
        });
    </script>
}
